{
  "languageserver": {
    "php": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php", "blade"],
      "settings": {
        "intelephense": {
          "files": {
            "associations": ["*.php", "*.blade.php"]
          }
        }
      }
    },
    "blade": {
      "command": "php",
      "args": ["-dxdebug.mode=off", "/path/to/php-language-server.php"],
      "filetypes": ["blade"],
      "settings": {
        "blade": {
          "runtime": {
            "version": "*",
            "path": ["vim.split(package.path, ';')"]
          },
          "diagnostics": {
            "enable": true,
            "globals": ["vim"]
          },
          "workspace": {
            "library": ["vim.api.nvim_get_runtime_file('', true)"]
          },
          "telemetry": {
            "enable": false
          }
        }
      }
    }
  }
}

